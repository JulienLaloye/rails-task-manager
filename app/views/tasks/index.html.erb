<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task|  %>
  <ul>
    <a href=<%= "tasks/#{task.id}"%> method="get" style="text-decoration: none"><%=task.title%></a>
        <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <%end %>
  <div>
  <a href="/tasks/new" style="text-decoration: none">Add a new task</a>
  </div>
</ul>
