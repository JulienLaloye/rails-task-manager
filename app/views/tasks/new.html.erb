<div class="container">
  <h1><%= @task.title %></h1>
  <div class="d-flex">
    <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <%= f.label :completed %>
      <%= f.check_box :rating %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
